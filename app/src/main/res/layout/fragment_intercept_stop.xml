<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_800"
    tools:context="com.chenji.lock.view.intercept.intercept.InterceptFragmentStop">

    <TextView
        android:id="@+id/intercept_stop_sure"
        android:layout_width="280dp"
        android:layout_height="@dimen/item_big"
        android:layout_centerInParent="true"
        android:background="@color/grey_1000"
        android:gravity="center"
        android:textColor="@color/text_white"
        android:textSize="@dimen/text_big"
        />

    <TextView
        android:id="@+id/intercept_stop_tip"
        android:layout_width="280dp"
        android:layout_height="@dimen/item_big"
        android:layout_marginBottom="3dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/intercept_stop_sure"
        android:background="@color/grey_1000"
        android:gravity="center"
        android:textColor="@color/text_white"
        android:textSize="@dimen/text_big"
        />



</RelativeLayout>
