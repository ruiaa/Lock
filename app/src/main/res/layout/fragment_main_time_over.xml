<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.chenji.lock.view.time.MainFragmentTimeOver">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_big"
        android:layout_marginLeft="@dimen/item_margin"
        android:layout_marginRight="@dimen/item_margin"
        android:layout_marginTop="@dimen/item_margin"
        android:background="@color/list_item_background">

        <ImageView
            android:id="@+id/time_over_icon"
            android:layout_width="@dimen/item_small"
            android:layout_height="@dimen/item_small"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/time_over_use_time_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/time_over_icon"
            android:text="@string/lock_use_time_tip" />

        <TextView
            android:id="@+id/time_over_use_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/time_over_use_time_tip" />

    </RelativeLayout>

     <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="@dimen/item_margin"
            android:layout_marginRight="@dimen/item_big_4"
            android:layout_marginTop="@dimen/item_margin"
            android:background="@drawable/lock_list_background"
            android:text="@string/time_over"
            />

        <ListView
            android:id="@+id/time_over_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/transparency"
            android:dividerHeight="0dp"
            android:listSelector="@color/transparency"
            android:scrollbars="none"
            />

</LinearLayout>
