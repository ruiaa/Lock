<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.chenji.lock.view.more.MoreFragmentAbout">

    <ImageView
        android:id="@android:id/icon"
        android:layout_width="@dimen/item_xBig"
        android:layout_height="@dimen/item_xBig"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="154dp"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/more_about_me_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@android:id/icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/item_big_4"
        android:background="@drawable/lock_list_background"
        android:padding="3dp"
        android:text="  时间锁  "
        android:textSize="@dimen/text_big" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/more_about_me_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:background="@drawable/lock_list_background"
        android:padding="3dp"
        android:text="  当前版本：1.2  "
        android:textSize="@dimen/text_big" />

    <TextView
        android:id="@+id/more_about_me_chenji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="64dp"
        android:text="1559793706@qq.com" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/more_about_me_chenji"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="3dp"
        android:text="\@chenji" />

</RelativeLayout>
